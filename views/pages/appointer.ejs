<!DOCTYPE html>
<html class="h-full">

<head>
    <meta charset="UTF-8">
    <title>Terminplaner</title>
    <link href="/ttrpg-area/output.css" rel="stylesheet">
    <script src="/ttrpg-area/script.js"></script>
</head>

<body class="bg-gray-700 h-full">
    <header class="bg-red">
        <%- include('../partials/header'); %>
    </header>

    <main class="grid grid-cols-10 h-full">
        <div class="h-full col-span-3 grid grid-cols-6 mt-10">
            <div class="col-start-2 col-end-6 bg-zinc-900 my-4 rounded-lg">
                <p class="text-white text-3xl text-center m-2 mb-4 font-bold">Deine Parties</p>
                <hr class="border-dark border-2">
                <div class="h-1/4">
                    <% parties.forEach(function(party) { %>
                        <button id="<%= party.par_id %>" onclick="show_party(this.id)" class="inline-block w-full p-2 font-bold text-xl hover:bg-gray-700 text-center text-white">
                            <%= party.par_name %>
                        </button>
                        <input type="hidden" id="party_name_tmp<%= party.par_id %>" value="<%= party.par_name %>">
                        <input type="hidden" id="party_code_tmp<%= party.par_id %>" value="<%= party.par_code %>">
                    <% }); %>
                </div>
                <div class="group grid grid-cols-6 h-1/4">
                    <span class="col-start-2 col-end-6 text-center text-white text-xl rounded-lg p-2 m-2 group-hover:underline">Party erstellen</span><br>
                    <form action="/ttrpg-area/add_party" class="group-hover:grid hidden p-2 w-full col-span-6" method="post">
                        <label class="text-white" for="party_name">Name</label><br>
                        <input class="" type="text" id="party_name" name="party_name" required>
                        <label class="text-white" for="party_code">Beitritts-Code</label><br>
                        <input class="" type="text" id="party_code" name="party_code" required>
                        <input class="text-center bg-red-600 rounded-lg p-2 m-2 hover:bg-red-800" type="submit" value="Erstellen">
                    </form>
                </div>
                <div class="group grid grid-cols-6 h-1/4">
                    <span class="col-start-2 col-end-6 text-center text-white text-xl rounded-lg p-2 m-2 group-hover:underline">Party beitreten</span><br>
                    <form action="/ttrpg-area/join_party" class="group-hover:grid hidden p-2 w-full col-span-6" method="post">
                        <label class="text-white" for="party_name_join">Name</label><br>
                        <input class="" type="text" id="party_name_join" name="party_name_join" required>
                        <label class="text-white" for="party_code_join">Beitritts-Code</label><br>
                        <input class="" type="text" id="party_code_join" name="party_code_join" required>
                        <input class="text-center bg-red-600 rounded-lg p-2 m-2 hover:bg-red-800" type="submit" value="Beitreten">
                    </form>
                </div>
            </div>
        </div>

        <div id="dates" class="party col-start-4 col-end-10 bg-zinc-900 h-full mt-14 rounded-lg">

        </div>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>